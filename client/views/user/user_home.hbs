<!DOCTYPE html>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link
		href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
		rel="stylesheet">
	<link rel="shortcut icon" href="/img/logo.png" type="image/x-icon">
	<script src="https://unpkg.com/@phosphor-icons/web"></script>
	<link rel="stylesheet" href="/css/user/user_home.css">
	<script src='https://cdn.jsdelivr.net/npm/rrule@2.6.4/dist/es5/rrule.min.js'></script>
	<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.13/index.global.min.js'></script>
	<script src='https://cdn.jsdelivr.net/npm/@fullcalendar/rrule@6.1.13/index.global.min.js'></script>
	<script src="/js/user/user-calendar.user.js"></script>
	<title>Dashboard - Atlas GYM</title>
</head>

<body>
	<section id="sidebar">

		{{#if error}}
		<div class="toast-error">
			<div class="icon">
				<i class="ph ph-x-circle"></i>
			</div>
			<div class="message">
				{{error}}
			</div>
		</div>
		{{/if}}

		{{#if sucess}}
		<div class="toast-sucess">
			<div class="icon">
				<i class="ph ph-check-circle"></i>
			</div>
			<div class="message">
				{{sucess}}
			</div>
		</div>
		{{/if}}


		<div class="top-sidebar">
			<img src="/img/logo.png" alt="logo">
			<i class="ph ph-list"></i>
		</div>

		<ul class="page-links">
			<li class="active">
				<a href="/user/{{user.user_uuid}}">
					<i class="ph-fill ph-house"></i>
					<span class="text">Home</span>
				</a>
			</li>

			<li>
				<a href="/user/{{user.user_uuid}}/workouts/">
					<i class="ph ph-barbell"></i>
					<span class="text">Treinos</span>
				</a>
			</li>

			<li>
				<a href="/user/{{user.user_uuid}}/profile">
					<i class="ph ph-user-circle"></i>
					<span class="text">Perfil</span>
				</a>
			</li>

			<li>
				<a href="" class="logout">
					<i class="ph-fill ph-sign-out"></i>
					<span class="text">Sair</span>
				</a>
			</li>
		</ul>

	</section>

	<div id="content">
		<nav>
			<a href="#" class="nav-link">Olá {{user.name}} </a>
		</nav>

		{{> (lookup . 'partial')}}

		<div class="modal-overlay" id="modal">
			<form action="/login/logout" method="post">
				<input type="hidden" name="_method" value="DELETE">
				<div class="modal-content">
					<h2>Deseja sair?</h2>
					<p>Tem certeza que deseja sair?</p>
					<button type="submit" id="btnYes">Sim</button>
					<button type="button" id="btnNo">Não</button>
				</div>
			</form>
		</div>
	</div>
	<script src="/js/main.js"></script>
	<script src="/js/user/form-modal.js"></script>

	<script>
		function openModal() {
			document.getElementById('myModal').style.display = 'block';
		}

		function closeModal() {
			document.getElementById('myModal').style.display = 'none';
		}

		setTimeout(function () {
			const toast = document.querySelector('.toast-container')
			if (toast) {
				toast.parentNode.removeChild(toast)
			}
		}, 4000)

	</script>
</body>

</html>